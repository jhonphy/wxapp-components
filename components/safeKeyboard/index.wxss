
.keyboard_container {
  width: 100%;
  height: 100%;
  background: #fff;
}
.mask_gray {
  background-color: rgba(0, 0, 0, .5);
}
.keyBoard {
  background-color: #fff;
  width: 100%;
  /* height: 827rpx; */
  position: absolute;
  bottom: 0;
  left: 0;
}
.item_title {
  vertical-align: middle;
  font-size: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  border-bottom: 1rpx solid #E3E3E3;
}
.item_title_set {
  width: 100%;
  height: 40rpx;
  padding-top: 100rpx;
  text-align: center;
}
.item_title_set .item_title_set_txt {
  display: inline-block;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  line-height: 40rpx;
  position: relative;
}
.item_title_set .item_title_set_tip {
  display: inline-block;
  position: absolute;
  width: 25rpx;
  height: 26rpx;
  top: 8rpx;
  right: -35rpx;
}
.close {
  float: left;
  width: 26rpx;
  height: 26rpx;
  margin-top: 37rpx;
  margin-left: 30rpx;
}
.title {
  line-height: 100rpx;
  font-size: 34rpx;
  color: #333;
}
.tip {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #E02112;
  text-align: center;
}
.pwd-modal {
  background: white;
  z-index: 99;
  border-radius: 8rpx;
  text-align: center;
}
ul {
  display: flex;
  margin: 0 30rpx;
}
ul li {
  width: 100%;
  height: 96rpx;
  line-height: 94rpx;
  border: 1rpx solid #B5B5B5;
  border-right: 0 none;
  box-sizing: border-box;
  text-align: center;
  font-size: 0;
}
ul li:first-of-type {
  border-radius: 10rpx 0 0 10rpx;
}
ul li:last-of-type {
  border-radius: 0 10rpx 10rpx 0;
  border-right: 1rpx solid #B5B5B5;
}
ul li .circle {
  display: inline-block;
  vertical-align: middle;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #333;
}

.keyBoard input {
  text-indent: -9999rpx;
  margin-left: -9999rpx;
  opacity: 0;
}